# D.N Express Logistics Backend Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
HOST=localhost
PORT=5000

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_change_in_production
JWT_REFRESH_EXPIRE=30d

# ============================================
# Database Configuration
# If using a real database later (MySQL, PostgreSQL, MongoDB, etc.)
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=dnexpress_logistics

# ============================================
# Security Configuration
# ============================================
BCRYPT_ROUNDS=10

# ============================================
# Email Configuration (for future notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@dnexpresslogistics.com

# ============================================
# API Configuration
# ============================================
API_BASE_URL=http://localhost:5000/api
API_VERSION=1.0.0

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug

# ============================================
# White Label Company Info
# ============================================
COMPANY_NAME=D.N Express Logistics
COMPANY_PARENT=Fast Forward Now
COMPANY_EMAIL=dnexpresslogisticsja@gmail.com
