# D.N Express Logistics Backend Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
HOST=localhost
PORT=5000

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_change_in_production
JWT_REFRESH_EXPIRE=30d

# ============================================
# Database Configuration
# If using a real database later (MySQL, PostgreSQL, MongoDB, etc.)
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=dnexpress_logistics

# ============================================
# Security Configuration
# ============================================
BCRYPT_ROUNDS=10

# ============================================
# Email Configuration (for future notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@dnexpresslogistics.com

# ============================================
# API Configuration
# ============================================
API_BASE_URL=http://localhost:5000/api
API_VERSION=1.0.0

# ============================================
# Sethwan Integration (Warehouse/Courier Platform)
# Get these from your Sethwan account dashboard at https://sethwan.com
# ============================================
SETHWAN_API_URL=https://api.sethwan.com
SETHWAN_API_KEY=your-sethwan-api-key-from-dashboard
SETHWAN_ACCOUNT_ID=your-sethwan-account-id-from-dashboard

# ============================================
# Session Secret
# ============================================
SESSION_SECRET=your_random_session_secret_key_change_in_production

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug


# ============================================
# White Label Company Info
# ============================================
COMPANY_NAME=Your Company Name
COMPANY_PARENT=Parent Company Name
COMPANY_EMAIL=contact@yourcompany.com
